<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_chapter_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:background="@drawable/bubble_background_darker_blue"
        android:fontFamily="@font/montserrat"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/white"
        tools:ignore="PrivateResource"
        tools:targetApi="o"
        tools:text="Ch. 9999.9" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/chapter_release_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sizeToFit="true"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        tools:ignore="PrivateResource"
        tools:targetApi="o"
        tools:text="44 Seconds Ago" />
</LinearLayout>